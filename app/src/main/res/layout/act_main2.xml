<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <com.kborid.smart.widget.AutoAdjustTextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:text="Test1"
                android:textSize="100sp" />

            <com.kborid.smart.widget.AdaptionSizeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Test2Test2Test2Test2Test2Test2"
                android:textSize="30sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:textColor="#ff0000"
            android:textSize="200sp" />

        <com.kborid.smart.widget.ThirdLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />

        <com.kborid.smart.widget.CodeInputTextLayout
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <com.kborid.smart.widget.HwLoadingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:hlv_color="@color/colorAccent"
            app:hlv_size="360dp" />

    </FrameLayout>

    <include layout="@layout/layout_main_title" />
</LinearLayout>
