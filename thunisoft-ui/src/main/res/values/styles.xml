<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialogStyle" parent="android:style/Theme.Material.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="dialogStyle.Progress">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimAmount">0.2</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="msgCountIndicator" parent="android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">18dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_msg_indicator</item>
    </style>

    <style name="ToolBarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <!--        <item name="android:paddingLeft">@dimen/abc_action_bar_default_padding_start_material</item>-->
        <!--        <item name="android:paddingRight">@dimen/abc_action_bar_default_padding_end_material</item>-->
    </style>
</resources>