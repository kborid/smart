<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_handler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HandlerThread"
        android:textAllCaps="false"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_intent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_intent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IntentService"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@id/btn_handler"
        app:layout_constraintRight_toLeftOf="@id/btn_lifeCycle"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_lifeCycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LifeCycle"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@id/btn_intent"
        app:layout_constraintRight_toLeftOf="@id/btn_other"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@id/btn_lifeCycle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
